@model BirthdayCardGenerator.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/Styles.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>CardForm</title>
</head>
<body>

<h4>Send a Birthday Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CardForm">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-inline">
                <label asp-for="From" class="control-label">From: &nbsp;</label>  
                <input asp-for="From" class="form-control" />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>
            <br />
            <div class="form-inline">
                <label asp-for="To" class="control-label">To: &nbsp;</label>
                <input asp-for="To" class="form-control" />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>
            <br />
            <div class="form-inline">
                <label asp-for="Message" class="control-label">Message: &nbsp;</label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group btn btn-success">
                <input type="submit" value="Send card" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
